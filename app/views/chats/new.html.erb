  <% end %>

  <%= link_to t("helpers.navigation.back", model: Chat.model_name.human), chats_path, class: "sm:w-auto text-center mt-4 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium focus:outline-2 focus:outline-offset-2 focus:outline-violet-500" %>
</div>
