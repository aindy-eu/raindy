<% content_for :title, t("helpers.navigation.new", model: Chat.model_name.human) %>

<div class="container mx-auto p-6">
  <h1 class="font-light text-4xl mb-4"><%= t("helpers.navigation.new", model: Chat.model_name.human) %></h1>

  <%= turbo_frame_tag "chats_new", class: "this-class-never-gets-applied when-used-with-turbo" do %>
